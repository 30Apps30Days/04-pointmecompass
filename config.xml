<?xml version='1.0' encoding='utf-8'?>
<widget id="com.metaist.pointme" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Point Me</name>
    <description>
    Basic compass.
  </description>
    <author email="metaist@metaist.com" href="http://metaist.com">
    Metaist LLC
  </author>
    <icon src="assets/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.2" />
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.6" />
    <plugin name="cordova-plugin-screen-orientation" spec="~2.0.0" />
    <plugin name="cordova-plugin-app-preferences" spec="~0.99.3" />
    <engine name="browser" spec="~4.1.0" />
</widget>
